/* ==================== Home Section Layout (from home.html) ==================== */ /* Maintenance: If you change any @media rules (add/remove/reorder), update MEDIA_QUERIES_CONSOLIDATED.md line ranges and overall ranges, and commit both files together. */
#home .home-grid {
    max-width: 1400px;
    margin: 0 auto;
    padding: 65px 40px 60px; /* Adjusted for smaller navbar + banner (50px + 35px = 85px) */
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 80px;
    align-items: start;
}

#home .profile-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: sticky;
    top: 95px; /* below fixed navbar (50px) + banner (35px) + 10px spacing */
}

#home .about-card {
    background: var(--bg-secondary);
    border-radius: 24px;
    padding: 28px;
    box-shadow: 0 10px 30px var(--shadow);
}

.cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    background: linear-gradient(135deg, var(--accent), #7c3aed);
    color: #fff;
    text-decoration: none;
    border-radius: 28px;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    width: fit-content;
    margin: 24px auto 0;
}

.cta-button:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 14px 28px rgba(99, 102, 241, 0.35);
}

.cta-button:active {
    transform: translateY(0) scale(0.98);
}

